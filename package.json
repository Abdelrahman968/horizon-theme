    "commands": [
      {
        "command": "extension.horizonTags",
        "title": "Horizon Tags"
      }
    ],
    "configuration": [
      {
        "title": "Horizon Theme",
        "properties": {
          "horizonTheme.customIconAssociations": {
            "type": "object",
            "description": "Define custom icon associations. See README for more information.",
            "properties": {
              "icon": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      {
        "title": "Horizon Tags",
        "properties": {
          "horizonTags.colors": {
            "type": "array",
            "default": [
              "#e6b422",
              "#c70067",
              "#00a960",
              "#fc7482"
            ],
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "description": "An array of HEX color codes for the tag highlighting.",
            "scope": "window"
          },
          "horizonTags.hightlightType": {
            "type": "string",
            "default": "color",
            "enum": [
              "color",
              "background-color",
              "border"
            ],
            "description": "Highlighting graphical style of choice. Default \"color\"",
            "scope": "window"
          },
          "horizonTags.allowEverywhere": {
            "type": "boolean",
            "default": false,
            "description": "If true, highlights tags in all languages, not just XML-typed ones. May cause false highlights in TypeScript generics, etc.",
            "scope": "window"
          },
          "horizonTags.supportedLanguages": {
            "type": "array",
            "default": [
              "html",
              "php",
              "twig",
              "blade",
              "smarty",
              "xml",
              "vue"
            ],
            "items": {
              "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true,
            "description": "Supported language IDs.",
            "scope": "window"
          },
          "horizonTags.denylistTags": {
            "type": "array",
            "default": [
              "!DOCTYPE",
              "html",
              "head",
              "meta",
              "body",
              "title",
              "link",
              "script",
              "base",
              "style",
              "area",
              "br",
              "col",
              "embed",
              "hr",
              "img",
              "input",
              "param",
              "source",
              "track",
              "wbr"
            ],
            "items": {
              "type": "string"
            },
            "uniqueItems": true,
            "description": "Tags excluded from highlighting.",
            "scope": "window"
          }
        }
      }
    ]
  },
