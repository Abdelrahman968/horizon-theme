{
  "name": "Horizon Modern Light",
  "type": "light",
  "colors": {
    "editor.background": "#F4F6F8",
    "editor.foreground": "#1F2933",
    "editor.lineHighlightBackground": "#E9EEF3",
    "editorCursor.foreground": "#2563EB",
    "editorWhitespace.foreground": "#D0D7DE",

    "sideBar.background": "#EEF1F5",
    "sideBar.foreground": "#1F2933",
    "sideBar.border": "#E2E6EA",

    "activityBar.background": "#E8EDF3",
    "activityBar.foreground": "#1F2933",
    "activityBar.border": "#D8DEE4",

    "titleBar.activeBackground": "#F0F3F7",
    "titleBar.activeForeground": "#1F2933",
    "titleBar.border": "#E2E6EA",

    "menu.background": "#FFFFFF",
    "menu.foreground": "#1F2933",
    "menu.selectionBackground": "#E3E8EF",
    "menu.selectionForeground": "#000000",

    "list.hoverBackground": "#E3E8EF",
    "list.hoverForeground": "#000000",
    "list.activeSelectionBackground": "#DCE3EC",
    "list.activeSelectionForeground": "#000000",

    "quickInputList.focusBackground": "#DCE3EC",
    "quickInputList.focusForeground": "#000000",

    "statusBar.background": "#F0F3F7",
    "statusBar.foreground": "#1F2933",
    "statusBar.border": "#E2E6EA",
    "statusBar.noFolderBackground": "#F0F3F7",
    "statusBar.debuggingBackground": "#E4EAF2",

    "statusBarItem.hoverBackground": "#E6EBF2",

    "panel.background": "#F4F6F8",
    "panel.border": "#E2E6EA",

    "editorGroup.border": "#E2E6EA",
    "editorGroupHeader.tabsBackground": "#EEF1F5",

    "tab.activeBackground": "#FFFFFF",
    "tab.activeForeground": "#1F2933",
    "tab.inactiveBackground": "#EEF1F5",
    "tab.border": "#E2E6EA"
  },

  "tokenColors": [
    {
      "scope": "comment",
      "settings": {
        "foreground": "#6B7280",
        "fontStyle": "italic"
      }
    },
    {
      "scope": "keyword",
      "settings": {
        "foreground": "#1D4ED8",
        "fontStyle": "bold"
      }
    },
    {
      "scope": "string",
      "settings": {
        "foreground": "#047857"
      }
    },
    {
      "scope": "constant.numeric",
      "settings": {
        "foreground": "#B45309"
      }
    },
    {
      "scope": "variable",
      "settings": {
        "foreground": "#1F2933"
      }
    },
    {
      "scope": "entity.name.function",
      "settings": {
        "foreground": "#7C3AED"
      }
    },
    {
      "scope": "entity.name.type",
      "settings": {
        "foreground": "#0F766E"
      }
    }
  ]
}
