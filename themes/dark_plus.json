{
  "$schema": "vscode://schemas/color-theme",
  "name": "Horizon Dark",
  "type": "dark",
  "colors": {
    // ── Editor ──────────────────────────────────────────
    "editor.background": "#1A1B1D",
    "editor.foreground": "#D1D3DB",
    "editor.lineHighlightBackground": "#222427",
    "editor.selectionBackground": "#3579FF47",
    "editor.selectionHighlightBackground": "#3579FF21",
    "editor.inactiveSelectionBackground": "#3579FF2E",
    "editor.wordHighlightBackground": "#E0E2F214",
    "editor.wordHighlightStrongBackground": "#E0E2F21F",
    "editor.hoverHighlightBackground": "#3579FF21",
    "editor.findMatchBackground": "#3579FF5C",
    "editor.findMatchHighlightBackground": "#3579FF2E",
    "editor.findRangeHighlightBackground": "#3579FF14",
    "editorCursor.foreground": "#32F08C",
    "editorCursor.background": "#1A1B1D",
    "editorLink.activeForeground": "#6BA4FF",
    "editorUnnecessaryCode.opacity": "#00000080",
    "editorStickyScrollHover.background": "#222427",
    "editorWhitespace.foreground": "#E0E2F214",
    "editorRuler.foreground": "#E0E2F217",

    // ── Editor Line Numbers ──────────────────────────────
    "editorLineNumber.foreground": "#4A4F5A",
    "editorLineNumber.activeForeground": "#D1D3DB",

    // ── Editor Indent Guides ─────────────────────────────
    "editorIndentGuide.background1": "#E0E2F217",
    "editorIndentGuide.activeBackground1": "#E0E2F22E",

    // ── Editor Bracket Pair ──────────────────────────────
    "editorBracketPairGuide.background1": "#E0E2F217",
    "editorBracketPairGuide.background2": "#E0E2F217",
    "editorBracketPairGuide.background3": "#E0E2F217",
    "editorBracketPairGuide.background4": "#E0E2F217",
    "editorBracketPairGuide.background5": "#E0E2F217",
    "editorBracketPairGuide.background6": "#E0E2F217",
    "editorBracketMatch.background": "#3579FF2E",
    "editorBracketMatch.border": "#3579FF5C",

    // ── Editor Hover & Suggest ───────────────────────────
    "editorHoverWidget.background": "#222427",
    "editorHoverWidget.border": "#E0E2F217",
    "editorHoverWidget.foreground": "#D1D3DB",
    "editorHoverWidget.highlightForeground": "#F5F9FE",
    "editorHoverWidget.statusBarBackground": "#2A2D31",
    "editorSuggestWidget.background": "#222427",
    "editorSuggestWidget.border": "#E0E2F217",
    "editorSuggestWidget.foreground": "#D1D3DB",
    "editorSuggestWidget.highlightForeground": "#32F08C",
    "editorSuggestWidget.focusHighlightForeground": "#32F08C",
    "editorSuggestWidget.selectedBackground": "#E0E2F214",
    "editorSuggestWidget.selectedForeground": "#F5F9FE",

    // ── Diff Editor ──────────────────────────────────────
    "diffEditor.insertedLineBackground": "#00A56E21",
    "diffEditor.insertedTextBackground": "#00A56E3D",
    "diffEditor.removedLineBackground": "#D02A2321",
    "diffEditor.removedTextBackground": "#D02A233D",

    // ── Tabs ─────────────────────────────────────────────
    "editorGroupHeader.tabsBackground": "#111213",
    "editorGroupHeader.tabsBorder": "#E0E2F20D",
    "tab.border": "#E0E2F20D",
    "tab.activeBackground": "#1A1B1D",
    "tab.activeForeground": "#F5F9FE",
    "tab.activeBorderTop": "#32F08C",
    "tab.activeBorder": "#1A1B1D",
    "tab.inactiveBackground": "#111213",
    "tab.inactiveForeground": "#4A4F5A",
    "tab.unfocusedActiveForeground": "#9599A6",
    "tab.hoverBackground": "#E0E2F20D",

    // ── Title Bar ────────────────────────────────────────
    "titleBar.activeBackground": "#111213",
    "titleBar.activeForeground": "#D1D3DB",
    "titleBar.inactiveBackground": "#0E0F10",
    "titleBar.inactiveForeground": "#4A4F5A",
    "titleBar.border": "#E0E2F20D",

    // ── Activity Bar ─────────────────────────────────────
    "activityBar.background": "#0E0F10",
    "activityBar.foreground": "#D1D3DB",
    "activityBar.inactiveForeground": "#4A4F5A",
    "activityBar.border": "#E0E2F20D",
    "activityBarBadge.background": "#32F08C",
    "activityBarBadge.foreground": "#0C0C0D",

    // ── Side Bar ─────────────────────────────────────────
    "sideBar.background": "#111213",
    "sideBar.foreground": "#9599A6",
    "sideBar.border": "#E0E2F20D",
    "sideBarSectionHeader.background": "#0E0F10",
    "sideBarSectionHeader.foreground": "#737780",
    "sideBarSectionHeader.border": "#E0E2F217",
    "sideBarTitle.foreground": "#4A4F5A",

    // ── Status Bar ───────────────────────────────────────
    "statusBar.background": "#0B0C0D",
    "statusBar.foreground": "#737780",
    "statusBar.border": "#E0E2F20D",
    "statusBar.noFolderBackground": "#0B0C0D",
    "statusBar.debuggingBackground": "#D02A23",
    "statusBar.debuggingForeground": "#ffffff",

    // ── Panel ────────────────────────────────────────────
    "panel.background": "#111213",
    "panel.border": "#E0E2F217",
    "panelTitle.activeForeground": "#F5F9FE",
    "panelTitle.inactiveForeground": "#4A4F5A",
    "panelTitle.activeBorder": "#32F08C",
    "panelSectionHeader.background": "#0E0F10",
    "panelSectionHeader.foreground": "#737780",
    "panelSectionHeader.border": "#E0E2F217",

    // ── Lists & Trees ────────────────────────────────────
    "list.activeSelectionBackground": "#E0E2F214",
    "list.activeSelectionForeground": "#F5F9FE",
    "list.inactiveSelectionBackground": "#E0E2F20D",
    "list.inactiveSelectionForeground": "#D1D3DB",
    "list.hoverBackground": "#E0E2F20D",
    "list.hoverForeground": "#D1D3DB",
    "list.dropBackground": "#E0E2F20D",
    "list.highlightForeground": "#32F08C",
    "list.errorForeground": "#F65A5A",
    "list.warningForeground": "#DC8730",
    "listFilterWidget.background": "#222427",
    "listFilterWidget.outline": "#32F08C",
    "tree.indentGuidesStroke": "#E0E2F217",
    "tree.inactiveIndentGuidesStroke": "#E0E2F20D",

    // ── Input & Buttons ──────────────────────────────────
    "input.background": "#E0E2F20D",
    "input.foreground": "#D1D3DB",
    "input.border": "#E0E2F217",
    "input.placeholderForeground": "#4A4F5A",
    "inputOption.activeBorder": "#32F08C",
    "inputOption.activeBackground": "#32F08C21",
    "inputOption.activeForeground": "#F5F9FE",
    "inputValidation.errorBorder": "#F65A5A",
    "inputValidation.errorBackground": "#D02A2321",
    "inputValidation.warningBorder": "#DC8730",
    "inputValidation.warningBackground": "#DC873021",
    "button.background": "#32F08C",
    "button.foreground": "#0C0C0D",
    "button.hoverBackground": "#0FDC78",
    "button.secondaryBackground": "#E0E2F214",
    "button.secondaryForeground": "#D1D3DB",
    "button.secondaryHoverBackground": "#E0E2F21F",

    // ── Menu ─────────────────────────────────────────────
    "menu.background": "#1A1B1D",
    "menu.foreground": "#D1D3DB",
    "menu.border": "#E0E2F217",
    "menu.selectionBackground": "#E0E2F214",
    "menu.selectionForeground": "#F5F9FE",
    "menu.separatorBackground": "#E0E2F217",

    // ── Quick Input / Command Palette ────────────────────
    "quickInput.background": "#111213",
    "quickInput.foreground": "#D1D3DB",
    "quickInputTitle.background": "#0E0F10",
    "quickInputList.focusBackground": "#E0E2F214",
    "quickInputList.focusForeground": "#F5F9FE",
    "pickerGroup.foreground": "#32F08C",
    "pickerGroup.border": "#E0E2F217",

    // ── Command Center ───────────────────────────────────
    "commandCenter.background": "#E0E2F20D",
    "commandCenter.border": "#E0E2F217",
    "commandCenter.activeBorder": "#32F08C",
    "commandCenter.inactiveBorder": "#E0E2F20D",
    "commandCenter.foreground": "#9599A6",
    "commandCenter.activeForeground": "#D1D3DB",

    // ── Notifications ────────────────────────────────────
    "notifications.background": "#1A1B1D",
    "notifications.foreground": "#D1D3DB",
    "notifications.border": "#E0E2F217",
    "notificationsErrorIcon.foreground": "#F65A5A",
    "notificationsWarningIcon.foreground": "#DC8730",
    "notificationsInfoIcon.foreground": "#6BA4FF",

    // ── Settings ─────────────────────────────────────────
    "settings.headerForeground": "#F5F9FE",
    "settings.headerBorder": "#E0E2F217",
    "settings.modifiedItemIndicator": "#32F08C",
    "settings.dropdownBackground": "#222427",
    "settings.dropdownBorder": "#E0E2F217",
    "settings.dropdownForeground": "#D1D3DB",
    "settings.checkboxBackground": "#222427",
    "settings.checkboxBorder": "#E0E2F217",
    "settings.textInputBackground": "#E0E2F20D",
    "settings.textInputBorder": "#E0E2F217",

    // ── Debug ────────────────────────────────────────────
    "debugToolBar.background": "#1A1B1D",
    "debugToolBar.border": "#E0E2F217",
    "debugIcon.breakpointForeground": "#F65A5A",
    "debugIcon.breakpointDisabledForeground": "#4A4F5A",
    "debugIcon.startForeground": "#32F08C",
    "debugIcon.stopForeground": "#F65A5A",
    "debugIcon.continueForeground": "#32F08C",
    "debugIcon.stepOverForeground": "#6BA4FF",
    "debugIcon.stepIntoForeground": "#6BA4FF",
    "debugIcon.stepOutForeground": "#6BA4FF",
    "debugConsole.infoForeground": "#6BA4FF",
    "debugConsole.warningForeground": "#DC8730",
    "debugConsole.errorForeground": "#F65A5A",

    // ── Scrollbar ────────────────────────────────────────
    "scrollbar.shadow": "#00000029",
    "scrollbarSlider.background": "#E0E2F21F",
    "scrollbarSlider.hoverBackground": "#E0E2F22E",
    "scrollbarSlider.activeBackground": "#E0E2F240",

    // ── Terminal ─────────────────────────────────────────
    "terminal.background": "#1A1B1D",
    "terminal.foreground": "#D1D3DB",
    "terminal.ansiBlack": "#1A1B1D",
    "terminal.ansiRed": "#F65A5A",
    "terminal.ansiGreen": "#32F08C",
    "terminal.ansiYellow": "#DCB364",
    "terminal.ansiBlue": "#6BA4FF",
    "terminal.ansiMagenta": "#EC93FF",
    "terminal.ansiCyan": "#04CBE5",
    "terminal.ansiWhite": "#D1D3DB",
    "terminal.selectionBackground": "#3579FF47",

    // ── Misc ─────────────────────────────────────────────
    "focusBorder": "#32F08C47",
    "foreground": "#D1D3DB",
    "disabledForeground": "#4A4F5A",
    "errorForeground": "#F65A5A",
    "descriptionForeground": "#9599A6",
    "icon.foreground": "#8D93A6",
    "symbolIcon.methodForeground": "#BFA5FF",
    "symbolIcon.functionForeground": "#6BA4FF",
    "symbolIcon.classForeground": "#DCB364",
    "symbolIcon.variableForeground": "#D1D3DB",
    "symbolIcon.keywordForeground": "#EC93FF",
    "textLink.foreground": "#6BA4FF",
    "textLink.activeForeground": "#9DC4FF",
    "textBlockQuote.background": "#E0E2F20D",
    "textBlockQuote.border": "#32F08C",
    "textCodeBlock.background": "#111213",
    "widget.shadow": "#00000029",
    "toolbar.hoverBackground": "#E0E2F20D",
    "toolbar.activeBackground": "#E0E2F214",
    "breadcrumb.foreground": "#4A4F5A",
    "breadcrumb.focusForeground": "#D1D3DB",
    "breadcrumb.activeSelectionForeground": "#F5F9FE",
    "breadcrumbPicker.background": "#1A1B1D",
    "sash.hoverBorder": "#32F08C",
    "progressBar.background": "#32F08C",
    "search.resultsInfoForeground": "#4A4F5A",
    "selection.background": "#3579FF47",
    "badge.background": "#32F08C",
    "badge.foreground": "#0C0C0D"
  },

  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": { "foreground": "#4A4F5A", "fontStyle": "italic" }
    },
    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "storage.type",
        "storage.modifier",
        "keyword.control"
      ],
      "settings": { "foreground": "#EC93FF" }
    },
    {
      "name": "Strings",
      "scope": ["string", "string.quoted", "string.template"],
      "settings": { "foreground": "#32F08C" }
    },
    {
      "name": "String Escape",
      "scope": ["constant.character.escape"],
      "settings": { "foreground": "#04CBE5" }
    },
    {
      "name": "Numbers",
      "scope": ["constant.numeric"],
      "settings": { "foreground": "#DCB364" }
    },
    {
      "name": "Booleans & Constants",
      "scope": ["constant.language", "variable.other.constant"],
      "settings": { "foreground": "#FF9392" }
    },
    {
      "name": "Functions",
      "scope": ["entity.name.function", "support.function"],
      "settings": { "foreground": "#6BA4FF" }
    },
    {
      "name": "Classes & Types",
      "scope": [
        "entity.name.class",
        "entity.name.type",
        "support.class",
        "entity.name.namespace"
      ],
      "settings": { "foreground": "#DCB364" }
    },
    {
      "name": "Parameters",
      "scope": ["variable.parameter"],
      "settings": { "foreground": "#FF9392", "fontStyle": "italic" }
    },
    {
      "name": "Variables",
      "scope": ["variable", "variable.other", "variable.other.readwrite"],
      "settings": { "foreground": "#D1D3DB" }
    },
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": { "foreground": "#04CBE5" }
    },
    {
      "name": "Punctuation",
      "scope": ["punctuation"],
      "settings": { "foreground": "#737780" }
    },
    {
      "name": "HTML Tags",
      "scope": ["entity.name.tag"],
      "settings": { "foreground": "#FF9392" }
    },
    {
      "name": "HTML Attributes",
      "scope": ["entity.other.attribute-name"],
      "settings": { "foreground": "#DCB364" }
    },
    {
      "name": "CSS Properties",
      "scope": ["support.type.property-name"],
      "settings": { "foreground": "#6BA4FF" }
    },
    {
      "name": "CSS Values",
      "scope": ["support.constant.property-value"],
      "settings": { "foreground": "#32F08C" }
    },
    {
      "name": "Imports & Exports",
      "scope": [
        "keyword.control.import",
        "keyword.control.export",
        "keyword.control.from"
      ],
      "settings": { "foreground": "#EC93FF" }
    },
    {
      "name": "Decorators",
      "scope": ["meta.decorator", "punctuation.decorator"],
      "settings": { "foreground": "#BFA5FF" }
    },
    {
      "name": "Type Annotations",
      "scope": ["entity.name.type.alias", "support.type"],
      "settings": { "foreground": "#7BB8FF" }
    },
    {
      "name": "Regex",
      "scope": ["string.regexp"],
      "settings": { "foreground": "#04CBE5" }
    },
    {
      "name": "Tags (JSX/TSX)",
      "scope": ["support.class.component"],
      "settings": { "foreground": "#DCB364" }
    },
    {
      "name": "Object Keys",
      "scope": ["meta.object-literal.key", "support.type.property-name.json"],
      "settings": { "foreground": "#7BB8FF" }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": { "foreground": "#F65A5A", "fontStyle": "underline" }
    }
  ],

  "semanticTokenColors": {
    "variable": "#D1D3DB",
    "variable.readonly": "#FF9392",
    "parameter": { "foreground": "#FF9392", "italic": true },
    "function": "#6BA4FF",
    "method": "#6BA4FF",
    "class": "#DCB364",
    "type": "#7BB8FF",
    "interface": "#7BB8FF",
    "enum": "#DCB364",
    "enumMember": "#FF9392",
    "keyword": "#EC93FF",
    "string": "#32F08C",
    "number": "#DCB364",
    "operator": "#04CBE5",
    "comment": { "foreground": "#4A4F5A", "italic": true },
    "decorator": "#BFA5FF",
    "namespace": "#DCB364",
    "property": "#D1D3DB",
    "typeParameter": "#7BB8FF"
  }
}
